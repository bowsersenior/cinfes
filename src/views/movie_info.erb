<dl class="dl-horizontal">
  <% info.each do |field, value| %>
    <dt><%= field %></dt>
    <dd>
      <% if field == 'imdbID' %>
        <a href="http://www.imdb.com/title/<%= value %>">
          <%= value %>
        </a>
      <% elsif field == 'Trailer'%>
        <a href="<%= value %>" rel="lightbox[trailers]" class="btn btn-success trailer">
          <i class="icon-play"></i>
        </a>
      <% else %>
        <%= value %>
      <% end %>
    </dd>
  <% end %>
</dl>