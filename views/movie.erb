<div id="tweets" class="hidden-phone span3">

</div>

<div class="flip">
  <div class="card">
    <div class="face front">
      <img class="movie-poster" src="<%= flash[:movie_poster] %>">
    </div>
    <div class="face back movie-info">
      <%= erb :movie_info, :locals => {:info => flash[:movie_info]} %>
    </div>
  </div>
</div>

<% hashtags = flash[:hashtags] %>

<div id="social">
  <p>
    <a href="https://twitter.com/share" class="twitter-share-button" data-lang="en" data-related="bowsersenior" data-hashtags="<%= hashtags %>" data-url="<%= request.url %>" data-count="vertical">Tweet</a>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
  </p>

  <p>
    <div class="fb-like" data-send="false" data-layout="box_count" data-width="450" data-show-faces="true" data-font="trebuchet ms"></div>
  </p>
</div>

<% content_for :js do %>
  <script>
    jQuery(function($){
      $("#tweets").tweet({
        avatar_size: 32,
        count: 8,
        query: "<%= flash[:movie_info]['Title'] %>",
        loading_text: "searching twitter..."
      });
    });
  </script>
<% end %>