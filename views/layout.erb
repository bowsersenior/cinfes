<html>
  <head>
    <title>CinFes: film festivals for the 21st century</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/font-awesome/css/font-awesome.css" rel="stylesheet" >

    <link href="/vendor/toastr/css/toastr.css" rel="stylesheet" >
    <link href="/vendor/toastr/css/toastr-responsive.css" rel="stylesheet" >

    <link href="/vendor/tweet/css/jquery.tweet.css" rel="stylesheet" >
    <link href="/vendor/mediaboxAdv/css/mediaboxAdv-Minimal.css" rel="stylesheet" >
    <link href="/css/cinfes.css" rel="stylesheet">
  </head>


  <body>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <div class="container-fluid">

      <%= erb :login_form %>
      <div class="header <%= "just-logged-in" if flash[:just_logged_in]%>">
        <h1 class="cinfes-name">
          <small><i class="icon-film cinfes-logo"></i></small>
          CinFes
          <small class="hidden-phone">film festivals for the 21st century</small>
        </h1>
      </div>

      <div class="row-fluid content">
        <%= yield %>
      </div>

      <%= if flash[:notice]
            erb :notice, :locals => {:message => flash[:notice]}
          elsif flash[:error]
            erb :error, :locals => {:message => flash[:error]}
          end
      %>
    </div>




    <script src="http://code.jquery.com/jquery-latest.js"></script>

    <script src="http://code.jquery.com/ui/1.9.0/jquery-ui.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/vendor/toastr/js/toastr.js"></script>
    <script src="http://js.pusher.com/1.12/pusher.min.js"></script>
    <script src="/vendor/tweet/js/jquery.tweet.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/mootools/1.4.5/mootools-yui-compressed.js"></script>

    <script src="/vendor/mediaboxAdv/js/mediaboxAdv.js"></script>

    <script src="/js/cinfes_main.js"></script>

    <%= yield_content :js %>
  </body>
</html>