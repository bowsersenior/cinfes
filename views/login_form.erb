<% if current_user %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <h2 class="alert-heading">Hello <%= current_user.username %></h2>
  </div>

  <a href="/logout">Log out</a>
<% else %>
  <form action="login" method="POST" class="input-prepend input-append">
    <span class="add-on">
      <i class="icon-user"></i>
    </span>
    <input type="text" name="username" class="span6" placeholder="User name">


    <input type="password" name="password" class="span6" placeholder="Password">
    <span class="add-on">
      <i class="icon-key"></i>
    </span>

    <input type="submit" value="Login" class="btn btn-primary">
  </form>
<% end %>