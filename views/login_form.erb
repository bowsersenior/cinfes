<% if current_user %>
  <div class="buttons">
    <a href="/logout" class="btn">Log out</a>
    <a href="/" class="btn btn-success">
      <i class="icon-home icon-large"></i>
    </a>
  </div>
<% else %>
  <form action="login" method="POST" class="input-prepend input-append login-form">
    <span class="add-on">
      <i class="icon-user"></i>
    </span>
    <input type="text" name="username" class="span6" size="10" placeholder="User name">


    <input type="password" name="password" class="span6" size="10" placeholder="Password">
    <span class="add-on">
      <i class="icon-key"></i>
    </span>

    <input type="submit" value="Login" class="btn btn-primary">
  </form>
<% end %>